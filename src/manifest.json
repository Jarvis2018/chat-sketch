{
  "$schema": "https://raw.githubusercontent.com/sketch-hq/SketchAPI/develop/docs/sketch-plugin-manifest-schema.json",
  "icon": "icon.png",
  "commands": [
    {
      "name": "Open Panel",
      "identifier": "chat-sketch.open-panel",
      "script": "./handler.js",
      "shortcut": "ctrl shift c"
    },
    {
      "name": "Generate Design",
      "identifier": "chat-sketch.generate-design",
      "script": "./handler.js"
    }
  ],
  "menu": {
    "title": "Chat Sketch",
    "items": [
      "chat-sketch.open-panel"
    ]
  },
  "ui": {
    "type": "web",
    "panel": {
      "title": "Chat Sketch",
      "width": 400,
      "height": 600,
      "resizable": true
    }
  }
}
